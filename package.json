{
    "name": "cravour",
    "version": "1.0.0",
    "description": "An AI-powered Financial Co-Pilot for budgeting, price tracking, and merchant discovery.",
    "main": "./public/index.js",
    "scripts": {
        "build": "webpack --config webpack.config.js",
        "clean": "rm -rf public/index.js public/index.js.map && rm -rf dist",
