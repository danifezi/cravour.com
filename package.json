        "Price Tracking",
        "Merchant Discovery",
        "Gemini",
        "TypeScript"
    ],
    "author": "Cravour Technologies Limited",
    "license": "Apache-2.0",
    "dependencies": {
        "@google/genai": "^1.9.0",
        "sanitize-html": "^2.13.0"
    },
    "devDependencies": {
        "@types/jest": "^29.5.12",
        "@types/node": "^20.14.9",
        "@types/sanitize-html": "^2.11.0",
        "dotenv": "^16.4.5",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "serve": "^14.2.3",
        "ts-jest": "^29.1.2",
        "ts-loader": "^9.5.1",
        "typescript": "^5.5.4",
        "webpack": "^5.94.0",
        "webpack-cli": "^5.1.4"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "jsdom",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ],
        "testMatch": [
            "**/tests/**/*.test.ts"
